{
  "name": "univera",
  "description": "An universal application architecture",
  "repository": {
    "type": "git",
    "url": "https://github.com/very-geek/univera.git"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf output",
    "slate": "rimraf node_modules && npm install",
    "build:server": "cross-env NODE_ENV=production npm run clean && babel server -d output -qs",
    "build:assets": "cross-env NODE_ENV=production webpack --config config/webpack.babel.js --progress",
    "build": "npm run build:server && npm run build:assets",
    "debug": "cross-env NODE_ENV=debug devtool server --console --watch",
    "start": "cross-env NODE_ENV=development nodemon --exec node server",
    "dist": "cross-env NODE_ENV=production npm run build",
    "lint": "cross-env NODE_ENV=development eslint client/** common/** server/** || true",
    "test": "cross-env NODE_ENV=test ava common/**/*.test.js --verbose",
    "test:watch": "cross-env NODE_ENV=test npm t -- --watch",
    "cover": "cross-env NODE_ENV=test nyc ava common/**/*.test.js",
    "cover:watch": "nodemon --quiet --watch server --watch common --exec cross-env NODE_ENV=test npm run cover -s",
    "coverage": "cross-env NODE_ENV=test nyc report --reporter=lcov | coveralls",
    "report": "cross-env NODE_ENV=test nyc report && open ./coverage/index.html"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "./config/testing-setup.js"
    ]
  },
  "nyc": {
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "include": [
      "./common/**/*.{js,jsx}",
      "./server/**/*.js"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "bluebird": "^3.3.4",
    "koa": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "mysql2": "^1.0.0-rc.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-router": "^2.1.1",
    "rrtr": "^2.2.0",
    "sequelize": "^3.21.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-react-constant-elements": "^6.4.0",
    "babel-plugin-transform-react-inline-elements": "^6.6.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chokidar": "^1.4.3",
    "coveralls": "^2.11.9",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "css-modules-require-hook": "^4.0.0",
    "devtool": "^1.9.1",
    "enzyme": "^2.2.0",
    "eslint": "^2.5.3",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "jsdom": "^8.3.1",
    "koa-logger": "^2.0.0",
    "localtunnel": "^1.8.1",
    "nodemon": "^1.9.1",
    "nyc": "^6.4.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-import": "^8.1.0",
    "postcss-loader": "^0.8.2",
    "postcss-url": "^5.1.1",
    "pre-commit": "^1.1.2",
    "react-addons-test-utils": "^15.0.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
